<configuration>
        <property>
                <name>dfs.replication</name>
                <value>2</value>
        </property>
        <property>
                <name>dfs.namenode.name.dir</name>
                <value>/dfs/namenode</value>
        </property>
        <property>
                <name>dfs.datanode.data.dir</name>
                <value>/dfs/datanode</value>
        </property>
        <property>
                <name>dfs.journalnode.edits.dir</name>
                <value>/dfs/journalnode</value>
        </property>
        <property>
                <name>dfs.namenode.checkpoint.dir</name>
                <value>/dfs/namesecondary</value>
        </property>


        <property>
                <name>dfs.nameservices</name>
                <value>mycluster,mycluster2</value>
        </property>

        <property>
                <name>dfs.ha.namenodes.mycluster</name>
                <value>master01,master02</value>
        </property>
        <property>
                <name>dfs.namenode.rpc-address.mycluster.master01</name>
                <value>master01:8020</value>
        </property>
        <property>
                <name>dfs.namenode.rpc-address.mycluster.master02</name>
                <value>master02:8020</value>
        </property>
        <property>
                <name>dfs.namenode.http-address.mycluster.master01</name>
                <value>master01:9870</value>
        </property>
        <property>
                <name>dfs.namenode.http-address.mycluster.master02</name>
                <value>master02:9870</value>
        </property>
        <property>
                <name>dfs.namenode.shared.edits.dir</name>
                <value>qjournal://master01:8485;master02:8485;zookeeper:8485/mycluster</value>
        </property>
        <property>
                <name>dfs.client.failover.proxy.provider.mycluster</name>
                <value>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider</value>
        </property>
        <property>
                <name>dfs.ha.fencing.methods</name>
                <value>sshfence</value>
        </property>
        <property>
                <name>dfs.ha.fencing.ssh.private-key-files</name>
                <value>/home/hadoop/.ssh/id_rsa</value>
        </property>

        <property>
                <name>dfs.ha.automatic-failover.enabled</name>
                <value>true</value>
        </property>
        <property>
                <name>dfs.namenode.rpc-address.mycluster2</name>
                <value>submaster03:8020</value>
        </property>
        <property>
                <name>dfs.namenode.http-address.mycluster2</name>
                <value>submaster03:9870</value>
        </property>
        <property>
                <name>dfs.namenode.secondary.http-address.mycluster2</name>
                <value>submaster03:9868</value>
        </property>
</configuration>